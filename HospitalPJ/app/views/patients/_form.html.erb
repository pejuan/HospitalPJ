<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :registryDate %><br>
    <%= f.date_select :registryDate, :order => [:day, :month, :year],:start_year => 1900, :end_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :bloodType %><br>
    <%= f.select :bloodType, options_for_select([["O-"], ["O+"], ["A-"], ["A+"], ["B-"],["B+"], ["AB-"],["AB+"]]) %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <%= radio_button_tag(:sex, "Male") %>
    <%= label_tag(:sex, "Male") %>
    <%= radio_button_tag(:sex, "Female") %>
    <%= label_tag(:sex, "Female") %>
  </div>
  <div class="field">
    <%= f.label :maritalStatus, 'Marital Status' %><br>
    <%= f.select :maritalStatus, options_for_select([["Single"], ["Married"], ["Divorced"], ["Widowed"], ["Civil Union"]]) %>
  </div>
  <div class="field">
    <%= f.label :birthdate %><br>
      <%= f.date_select :birthdate, :order => [:day, :month, :year],:start_year => 1900, :end_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :phoneNumber %><br>
    <%= f.text_field :phoneNumber %>
  </div>
  <div class="field">
    <%= f.label :cellphone %><br>
    <%= f.text_field :cellphone %>
  </div>
  <div class="field">
    <%= f.label :emergencyContact %><br>
    <%= f.text_field :emergencyContact %>
  </div>
  <div class="field">
    <%= f.label :occupation %><br>
    <%= f.text_field :occupation %>
  </div>
  <div class="field">
    <%= f.label :allergies %><br>
    <%= f.text_area :allergies %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
