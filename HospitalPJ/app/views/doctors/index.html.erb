<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Birthdate</th>
      <th>Specialty</th>
      <th>Undergraduateuniversity</th>
      <th>Specialtyuniversity</th>
      <th>Cost</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
     <%if doctor.admin == current_admin %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.lastname %></td>
        <td><%= doctor.birthdate %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.undergraduateUniversity %></td>
        <td><%= doctor.specialtyUniversity %></td>
        <td><%= doctor.cost %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.admin %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     <% end %> 
    <% end %>
  </tbody>
</table>

<br>

